{
	"elements":
	[
		{ "name": "IPAddress",                 "type": "ValidationTextBox", "caption": "IP-Address/Host" },
		{ "name": "TimeOut",                   "type": "NumberSpinner",     "caption": "Maximal ping timeout" },
		{ "name": "DefaultVolume",             "type": "NumberSpinner",     "caption": "Default volume (%)" },
                { "type": "Label", "label": "RINCON will be filled automatically during save if it is initial. Update will only be visible when reopening form." },
                { "name": "RINCON",                    "type": "ValidationTextBox", "caption": "RINCON" },
                { "name": "UpdateStatusFrequency",     "type": "NumberSpinner",     "caption": "Update Status Frq" },
                { "name": "UpdateStatusFrequencyNA",   "type": "NumberSpinner",     "caption": "NA Update Status Frq" },
                { "name": "UpdateGroupingFrequency",   "type": "NumberSpinner",     "caption": "Update Grouping Frq" },
                { "name": "UpdateGroupingFrequencyNA", "type": "NumberSpinner",     "caption": "NA Update Grouping Frq" },
                { "name": "GroupForcing",              "type": "CheckBox",          "caption": "Force grouping in Sonos" },
                { "name": "MuteControl",               "type": "CheckBox",          "caption": "Enable Mute Control" },
                { "name": "LoudnessControl",           "type": "CheckBox",          "caption": "Enable Loudness Control" },
                { "name": "BassControl",               "type": "CheckBox",          "caption": "Enable Bass Control" },
                { "name": "TrebleControl",             "type": "CheckBox",          "caption": "Enable Treble Control" },
                { "name": "BalanceControl",            "type": "CheckBox",          "caption": "Enable Balance Control" },
                { "name": "SleeptimerControl",         "type": "CheckBox",          "caption": "Enable Sleeptimer Control" },
                { "name": "PlayModeControl",           "type": "CheckBox",          "caption": "Enable Playmode Control" },
                { "name": "PlaylistImport",            "type": "Select",            "caption": "Import Playlists",
                    "options": [ 
                                 { "label": "none",                  "value": 0 },
                                 { "label": "saved",                 "value": 1 },
                                 { "label": "imported",              "value": 2 },
                                 { "label": "saved & imported",      "value": 3 },
                                 { "label": "favorites",             "value": 4 },
								 { "label": "saved & favorites",     "value": 5 },
								 { "label": "imported & favorites",  "value": 6 },
								 { "label": "saved, imported & fav", "value": 7 }
                               ] },
                { "name": "DetailedInformation",       "type": "CheckBox",          "caption": "Enable detailed info" },
                { "name": "ForceOrder",                "type": "CheckBox",          "caption": "Force Variable order" },
                { "type": "Label", "label": "Settings for radio stations:"},
                { "name": "IncludeTunein",             "type": "CheckBox",          "caption": "Include TuneIn favorites" },
		{ "name": "FavoriteStation",           "type": "Select",            "caption": "Favorite radio station", 
                    "options": [ 
                                 { "label": "NPO Radio 2",                    "value": "NPO Radio 2" },
                                 { "label": "538",              "value": "538" },
                                 { "label": "YouFM_TEST",                    "value": "YouFM" }
                  ] },
		{ "name": "WebFrontStations",          "type": "ValidationTextBox", "caption": "Stations in WebFront" },
		{ "name": "AlbumArtHeight",            "type": "NumberSpinner",     "caption": "Album Art Hight in WebFront"}
	],
	"actions":
	[
		{ "type": "Button", "label": "Update Radio Stations",  "onClick": "SNS_UpdateRadioStations($id);" },
		{ "type": "Button", "label": "Update Playlists",       "onClick": "SNS_UpdatePlaylists($id);" },
		{ "type": "Button", "label": "Read RINCON from Sonos", "onClick": "SNS_UpdateRINCON($id);" }
        ]
}
